<!-- Launch file for Bruin2, the BJU Autonomous Vehicle -->
<!-- name is a name of your choosing -->
<!-- plk is the package name as defined in each project.xml -->
<!-- type is executable listed in CMakeLists.txt? -->
<launch>
    <!-- state_machine node is different in two ways: 1) opens in its own window (currently causes error), 2) if if quits, all quit -->
    <node name="state_machine_program" pkg="state_machine" type="state_machine_node" output="screen" required="true" /> <!-- launch-prefix="gnome-terminal - - command" -->
    <node name="compass_driver" pkg="compass" type="compass_node" output="screen" />    
    <node name="digipot_driver" pkg="digipot" type="digipot_node" output="screen" />    
    <node name="relay_board_driver" pkg="relay_board" type="relay_board_node" output="screen" />    
    <node name="camera_driver" pkg="camera_node" type="camera_node" output="screen" />
    <node name="roboteq_driver" pkg="roboteq_driver" type="roboteq_node" output="screen">
	<rosparam param="channels">['brake', 'steer']</rosparam>
    </node>
</launch>
